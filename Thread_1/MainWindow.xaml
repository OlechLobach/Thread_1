<Window x:Class="ProcessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Process App" Height="450" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <Button Content="Start and Wait for Process" Click="StartAndWaitProcessButton_Click" Margin="5"/>
            <Button Content="Start Process" Click="StartProcessButton_Click" Margin="5"/>
            <Button Content="Wait for Process" Click="WaitForProcessButton_Click" Margin="5"/>
            <Button Content="Kill Process" Click="KillProcessButton_Click" Margin="5"/>
            <Button Content="Start Process with Arguments" Click="StartProcessWithArgumentsButton_Click" Margin="5"/>
            <Button Content="Start Search Process" Click="StartSearchProcessButton_Click" Margin="5"/>
            <Button Content="Launch Notepad" Click="LaunchNotepadButton_Click" Margin="5"/>
            <Button Content="Launch Calculator" Click="LaunchCalculatorButton_Click" Margin="5"/>
            <Button Content="Launch Paint" Click="LaunchPaintButton_Click" Margin="5"/>
            <TextBox x:Name="CustomAppPathTextBox" Width="300" Margin="5" ToolTip="Enter custom app path"/>
            <Button Content="Launch Custom App" Click="LaunchCustomAppButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>